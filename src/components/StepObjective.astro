---
export interface Props {
  what: string;
  why: string;
  class?: string;
}

const { what, why, class: className = '' } = Astro.props;
---

<div class={`step-context ${className}`}>
  <div class="context-item">
    <span class="context-label">What we're building</span>
    <div class="context-content">{what}</div>
  </div>
   
  <div class="context-item">
    <span class="context-label">Why this matters</span>
    <div class="context-content">{why}</div>
  </div>
</div>

<style>
  .step-context {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    background-color: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    margin: var(--space-4) 0;
  }

  .context-item {
    display: flex;
    flex-direction: column;
  }

  .context-label {
    font-size: var(--text-xs);
    color: var(--accent-primary);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-1);
  }

  .context-content {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
  }

  body.light-mode .step-context {
    background-color: var(--bg-surface);
    border-color: var(--border-primary);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .step-context {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }
  }
</style>
